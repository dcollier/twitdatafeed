<%= stylesheet_link_tag "showtweetscss" %>
<script type="text/javascript" src='http://code.jquery.com/jquery-1.8.2.js'></script>
<div id="content">
   <div id="left_side">
      <h1 id='agentheader'>
      PENDING MISSIONS</h2>
      <div class="rules">
