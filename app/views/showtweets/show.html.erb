      </div>
      <div class="tweetwhere">
         <img src="/images/epic.jpg" align="RIGHT" height="300" width="300" />
         <p class="hashuser">Tweet at:</p>
         <p class="hashuser">#theepic321</p>
         <p class="hashuser">@theepic321</p>
      </div>
   </div>
   <div id="right_side">
      <h1 id='agentheader'>
      AGENT UPDATE</h2>
      <div id='query'  style="display: none;">
         <%=@query%>
      </div>
      <div id="tweets">
         <%= render :partial => "currenttweet", :collection => @currenttweets %>
      </div>
   </div>
</div>
<script>
